{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2020", "esnext.asynciterable", "ES2020.Promise"],
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
}
